<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TryXamarinApp.views.AddPicturePage"
             Title="Add Picture">
    <ContentPage.Content>
        <Grid Padding="10,20,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!--Button 
                HorizontalOptions="CenterAndExpand" 
                FontSize="20" 
                WidthRequest="150" 
                Text="Upload Picture..." /-->
            <Label Text="Upload Photo"
                   FontSize="Title"
                   HorizontalOptions="CenterAndExpand"/>
            <ImageButton
                x:Name="Shlomke"
                Source="DeltaCubes"      
                Grid.Row="1"
                BackgroundColor="#F0F0F0"
                Clicked="ImageButtonClick"/>
            <Button Text="Upload to Server"
                    Clicked="UploadPhotoClick"
                    Grid.Row="2"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>